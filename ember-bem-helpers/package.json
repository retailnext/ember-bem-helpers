{
  "name": "ember-bem-helpers",
  "version": "2.0.0",
  "description": "BEM helpers for Ember.js applications",
  "keywords": [
    "ember-addon",
    "BEM",
    "helper"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/retailnext/ember-bem-helpers.git"
  },
  "license": "MIT",
  "author": "RetailNext",
  "exports": {
    ".": {
      "types": "./declarations/index.d.ts",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./declarations/*.d.ts",
      "default": "./dist/*.js"
    },
    "./addon-main.js": "./addon-main.cjs"
  },
  "typesVersions": {
    "*": {
      "*": [
        "declarations/*"
      ]
    }
  },
  "files": [
    "addon-main.cjs",
    "declarations",
    "dist",
    "lib"
  ],
  "scripts": {
    "build": "rollup --config",
    "lint": "concurrently 'npm:lint:*(!fix)' --names 'lint:'",
    "lint:fix": "concurrently 'npm:lint:*:fix' --names 'fix:'",
    "lint:hbs": "ember-template-lint . --no-error-on-unmatched-pattern",
    "lint:hbs:fix": "ember-template-lint . --fix --no-error-on-unmatched-pattern",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "prepack": "rollup --config",
    "start": "rollup --config --watch",
    "test": "echo 'A v2 addon does not have tests, run tests in test-app'"
  },
  "dependencies": {
    "@embroider/addon-shim": "^1.10.0",
    "decorator-transforms": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "7.28.3",
    "@babel/eslint-parser": "7.28.0",
    "@babel/runtime": "7.28.3",
    "@embroider/addon-dev": "8.1.0",
    "@eslint/js": "9.34.0",
    "@glint/environment-ember-loose": "1.5.2",
    "@rollup/plugin-babel": "6.0.4",
    "babel-plugin-ember-template-compilation": "2.4.1",
    "concurrently": "9.2.0",
    "ember-source": "6.6.0",
    "ember-template-lint": "7.9.3",
    "eslint": "9.34.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-ember": "12.7.3",
    "eslint-plugin-n": "17.21.3",
    "eslint-plugin-prettier": "5.5.4",
    "globals": "16.3.0",
    "prettier": "3.6.2",
    "rollup": "4.48.1",
    "rollup-plugin-copy": "3.5.0"
  },
  "peerDependencies": {
    "ember-source": ">=3.28.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "version": 2,
    "type": "addon",
    "main": "addon-main.cjs",
    "app-js": {
      "./helpers/bem.js": "./dist/_app_/helpers/bem.js",
      "./helpers/block-name.js": "./dist/_app_/helpers/block-name.js"
    }
  }
}
